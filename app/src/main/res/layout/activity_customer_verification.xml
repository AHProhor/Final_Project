<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".CustomerVerification">

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Customer Verification"
       android:textColor="#F1E7E7"
       android:textStyle="bold"
       android:textSize="30sp"
       android:layout_marginTop="50dp"
       android:layout_marginLeft="20dp"
       />


    <Button
        android:id="@+id/decimalCodeButton_id"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="120dp"
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:text="Decimal Code"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textColor="#FFFBFB"
        android:textSize="24sp"
        android:textStyle="bold"
        android:shadowDx="5"
        android:shadowDy="3"
        android:shadowColor="#AF0E5F"

        />

    <Button
        android:id="@+id/qr_br_code_id"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:background="@drawable/button"
        android:text="Qr/Br Code"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textColor="#FFFBFB"
        android:textSize="24sp"
        android:textStyle="bold"

        />



</LinearLayout>