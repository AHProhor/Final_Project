<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".ShopKepeerLoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:layout_width="267dp"
                android:layout_height="50dp"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textColor="#FFFBFB"
                android:textStyle="normal"
                android:layout_marginTop="150dp"
                android:hint="Username"
                android:inputType="text"
                android:maxLength="10"
                />


            <EditText
                android:layout_width="267dp"
                android:layout_height="50dp"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textColor="#FFFBFB"
                android:textStyle="normal"
                android:layout_marginTop="50dp"
                android:hint="Password"
                android:inputType="numberPassword"
                android:maxLength="10"
                />


            <Button
                android:id="@+id/forgetPasswordButton_id"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:background="#132844"
                android:layout_marginLeft="225dp"
                android:text="Forget password"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textColor="#8B7777"
                android:textSize="18sp"
                android:textStyle="bold"

                />

            <Button
                android:id="@+id/LoginButton_id"
                android:layout_width="110dp"
                android:layout_height="38dp"
                android:layout_marginTop="100dp"
                android:layout_gravity="center"
                android:background="@drawable/button"
                android:text="Login"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textColor="#24D4C8"
                android:textSize="24sp"
                android:textStyle="bold"

                />

            <Button
                android:id="@+id/createNewAccountButton_id"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="210dp"
                android:background="#FFFFFF"
                android:text="Create new account"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textColor="#1D1313"
                android:textSize="18sp"
                android:textStyle="bold"
                />

        </LinearLayout>

    </ScrollView>




</LinearLayout>